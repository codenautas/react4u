.ejemplo-todo
    font-family: Arial, Helvetica, sans-serif
    font-size 120%
    border-spacing 4px
    td
      background-color #FED
      border-radius 5px
      padding 3px
      margin 4px
      padding-left 5px
      padding-right 5px
    tr.completed
      td
        background-color #BFD
    tr.pending
      td
        background-color #FDE
    tr.add-task
      td
        background-color #8BF
        font-size 150%
        font-weight bold
