.ejemplo-encuesta
  width 786px
  font-family Arial
  td, th
    vertical-align top
    padding 2px
  .pregunta-id
    div
      background-color #DDD
  .pregunta-text
    font-weight bold
  .pregunta-aclaracion
    color blue
    &:before
      content '('
    &:after
      content ')'
    font-size 90%
    font-style italic
  [tipo-pregunta^="E"]
    .opciones
      td
        color blue
  td.texto-opcion
    border 1px solid transparent
  [es-elegida=si]
    td.texto-opcion
      border 1px solid green
      border-radius 4px
  .opcion-data-entry
    width 25px
    color gray